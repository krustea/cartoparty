{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
    <h3>Mes reservations</h3>


    {% for booking in user.bookings %}
        <div class="userBooking rounded">

    <p>Trajet : {{ booking.travel.category }}</p>
    <p>{{ booking.travel.party }}</p>
    <p>{{ booking.travel }}</p>
        <p>Date et heure:{{ booking.travel.startedAt|date('d-m-Y H:i') }}</p>
    <p>Nb de place(s) reservée(s){{ booking.nbTravelers }}</p>
        <a class="btn btn-success" href="{{ path('travel_show', {'id':booking.travel.id}) }}">voir plus</a>

        </div>
    {% endfor %}

    </div>

<div class="container">
    <h3>Mes trajets proposés</h3>
    {% for travel in user.travels %}
        <p>{{ travel.city }} - {{ travel.party }}</p>
        <a class="btn btn-success" href="{{ path('travel_show', {'id':travel.id}) }}">voir plus</a>

    {% endfor %}
</div>

    <h1>User</h1>
<div class="container">
    <table class="table table-striped">
        <tbody>
            <tr>
                <th scope="row">Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th scope="col">Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th scope="col">Email</th>
                <td>{{ user.email }}</td>
            </tr>

            <tr>
                <th scope="col">Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th scope="col">Zipcode</th>
                <td>{{ user.zipcode }}</td>
            </tr>
            <tr>
                <th scope="col">City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th scope="col">Phone</th>
                <td>{{ user.phone }}</td>
            </tr>

        </tbody>
    </table>


    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}

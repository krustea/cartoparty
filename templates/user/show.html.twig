{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    {% for booking in bookings %}
    <p>{{ booking.user }}</p>
    <p>{{ booking.travel }}</p>
    <p>{{ booking.nbTravelers }}</p>
    {% endfor %}

    {% for travel in user.travels %}
        <p>{{ travel.city }} - {{ travel.party }}</p>
        <ul>
            {% for booking in travel.bookings %}
                <li>{{ booking.user.firstname }}</li>
            {% endfor %}
        </ul>
    {% endfor %}

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
{#            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>#}
            <tr>
                <th>Adress</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ user.zipcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
{#            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>#}
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>


{% extends 'base.html.twig' %}

{% block title %}Party{% endblock %}

{% block body %}
    <h1>Party</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ party.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ party.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ party.picture }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ party.city }}</td>
            </tr>
            <tr>
                <th>Started_at</th>
                <td>{{ party.startedAt ? party.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ended_at</th>
                <td>{{ party.endedAt ? party.endedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ party.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('party_index') }}">back to list</a>

    <a href="{{ path('party_edit', {'id': party.id}) }}">edit</a>

    {{ include('party/_delete_form.html.twig') }}
{% endblock %}
